kanonic::{
  name: calculator;
  root: root;
};

//
//
// TOKENS
//
//

INTEGER: "[0-9]+";
PLUS: "\+";

//
//
// RULES
//
//

root
    : expr --> rootExpr
    |
    ;

expr
  : expr PLUS atomic --> plus
  ;

atomic
  : INTEGER --> int
  ;
